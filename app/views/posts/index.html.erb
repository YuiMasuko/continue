<h3>グループの投稿一覧</h3>

<table>
  <tr>
    <th>Event on</th>
    <th>Content</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.event_on %></td>
      <td><%= image_tag post.image.url %>
      <br><%= post.content %></td>
      <td><%= post.user.name %></td>
      <td><%= link_to 'Show', group_post_path(post.group_id, post) %></td>
      <td><%= link_to 'Edit', edit_group_post_path(post.group_id, post) %></td>
      <td><%= link_to 'Destroy', group_post_path(post.group_id, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br>
<%= link_to 'New Post', new_group_post_path %>
<br>
<%= link_to 'Back', group_path(@group_id) %>
