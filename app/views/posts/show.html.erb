<div class="container">
  <div class="row">
    <div class="contents col-md-8">
      <div class="post_info">
        <strong> 日付 : </strong>
          <%= @post.event_on %>   /

        <strong>投稿者 : </strong>
          <%= @post.user.name %>
        <br>
        <br>
        <p>
          <%= image_tag @post.image.url %>
        </p>
        <strong>内容 : </strong>
          <%= @post.content %>
      </div>

      <div class="button_back">
        <% if @post.user == current_user %>
          <%= link_to '投稿編集', edit_group_post_path(@post.group_id, @post), class:"btn btn-warning" %>
        <% end %>
      </div>

    </div>

    <div class="contents col-md-4">
      <div class="post_title">
        <h3>コメント</h3>
        <div id="comments_area">
          <%= render 'comments/index', comments: @comments, post: @post, group: @group %>
        </div>
        <% if user_signed_in? %>
          <%= render 'comments/form', comment: @comment, post: @post, group: @group %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="edit_form_back">
    <%= link_to '戻る', group_post_path(@group, @post), class:"btn btn-default" %>
  </div>
</div>
